{
    "compilerOptions": {
        "declaration": true,
        "importHelpers": true,
        "module": "commonjs",
        "outDir": "lib",
        "rootDirs": [
            "./"
        ],
        "strict": true,
        "target": "es2019",
        "noImplicitAny": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
    },
    "include": ["./**/*"]
}